# Czech Building Audit System - Configuration
# Phase 1: Complete configuration template

# ==========================================
# API KEYS (REQUIRED)
# ==========================================
# Get your keys from:
# - Anthropic: https://console.anthropic.com/settings/keys
# - OpenAI: https://platform.openai.com/api-keys
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here
OPENAI_API_KEY=sk-your_key_here

# ==========================================
# AI MODELS CONFIGURATION
# ==========================================
CLAUDE_MODEL=claude-sonnet-4-20250514
GPT4_MODEL=gpt-4-vision-preview
CLAUDE_MAX_TOKENS=4000
GPT4_MAX_TOKENS=4000

# ==========================================
# WORKFLOW FEATURE FLAGS
# ==========================================
ENABLE_WORKFLOW_A=true
ENABLE_WORKFLOW_B=false
ENABLE_KROS_MATCHING=true
ENABLE_RTS_MATCHING=true
ENABLE_RESOURCE_CALCULATION=true

# ==========================================
# RESOURCE CALCULATION SETTINGS
# ==========================================
# Allow web search for equipment specifications
ALLOW_WEB_SEARCH=true

# Prefer official norms when available (vs practical rates)
USE_OFFICIAL_NORMS=true

# ==========================================
# MULTI-ROLE EXPERT SYSTEM
# ==========================================
# Enable multi-role analysis (SME/ARCH/ENG/SUP)
MULTI_ROLE_ENABLED=true

# Adaptive depth per classification
# Format: comma-separated role names
MULTI_ROLE_GREEN_ROLES=SME,ARCH_LIGHT,ENG_LIGHT,SUP_LIGHT
MULTI_ROLE_AMBER_ROLES=SME,ARCH,ENG,SUP_LIGHT
MULTI_ROLE_RED_ROLES=SME,ARCH,ENG,SUP

# HITL (Human-in-the-Loop) triggers
MULTI_ROLE_HITL_ON_RED=true
MULTI_ROLE_HITL_PRICE_THRESHOLD=0.15
MULTI_ROLE_HITL_ON_CONFLICT_LEVELS=1,2

# Consensus rules
MULTI_ROLE_REQUIRE_AGREEMENT_ROLES=ENG,SME
MULTI_ROLE_CONSENSUS_MAX_ITERATIONS=3

# ==========================================
# PATHS (Auto-detected, override only if needed)
# ==========================================
# DATA_DIR=./data
# KB_DIR=./app/knowledge_base
# PROMPTS_DIR=./app/prompts
# LOGS_DIR=./logs
# WEB_DIR=./web

# ==========================================
# AUDIT CONFIGURATION
# ==========================================
# Classification thresholds (0.0 - 1.0)
AUDIT_GREEN_THRESHOLD=0.80
AUDIT_AMBER_THRESHOLD=0.50

# ==========================================
# PRICES CONFIGURATION
# ==========================================
AUTO_UPDATE_PRICES=false
PRICE_UPDATE_INTERVAL_DAYS=90

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_CLAUDE_CALLS=true
LOG_GPT4_CALLS=true

# ==========================================
# DEVELOPMENT / PRODUCTION
# ==========================================
# Environment type (development/production)
ENVIRONMENT=development

# Debug mode (verbose logging)
DEBUG=false
